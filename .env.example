# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=messaging_app

# Replit Authentication (OIDC)
# These are automatically provided by Replit
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# Session Configuration
# Generate a random secret for session encryption
SESSION_SECRET=your-secure-random-session-secret-here

# Object Storage Configuration
# Replit Object Storage - automatically configured
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PUBLIC_OBJECT_SEARCH_PATHS=/public
PRIVATE_OBJECT_DIR=.private

# Optional: Frontend Environment Variables
# Prefix with VITE_ to make them available in the frontend
# VITE_API_URL=http://localhost:5000
# VITE_WS_URL=ws://localhost:5000

# Feature Flags (Optional)
# Enable/disable specific features in the application
# ENABLE_E2E_ENCRYPTION=true
# ENABLE_VOICE_CALLING=true
# ENABLE_VIDEO_CALLING=true
# ENABLE_BROADCAST_CHANNELS=true
# ENABLE_DISAPPEARING_MESSAGES=true

# Encryption Configuration (Optional)
# Private keys are stored in browser localStorage
# Public keys are stored in PostgreSQL database
# RSA_KEY_SIZE=2048
# AES_KEY_SIZE=256
# ENCRYPTION_VERSION=1.0.0

# WebRTC Configuration (Optional)
# STUN/TURN servers for WebRTC peer connections
# STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=turn:your-turn-server.com:3478
# TURN_USERNAME=username
# TURN_CREDENTIAL=password

# Disappearing Messages Configuration (Optional)
# Cleanup job interval in milliseconds (default: 1 hour)
# CLEANUP_JOB_INTERVAL=3600000
