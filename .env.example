# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=messaging_app

# Replit Authentication (OIDC)
# These are automatically provided by Replit
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# Session Configuration
# Generate a random secret for session encryption
SESSION_SECRET=your-secure-random-session-secret-here

# Object Storage Configuration
# Replit Object Storage - automatically configured
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PUBLIC_OBJECT_SEARCH_PATHS=/public
PRIVATE_OBJECT_DIR=.private

# Optional: Frontend Environment Variables
# Prefix with VITE_ to make them available in the frontend
# VITE_API_URL=http://localhost:5000
# VITE_WS_URL=ws://localhost:5000
